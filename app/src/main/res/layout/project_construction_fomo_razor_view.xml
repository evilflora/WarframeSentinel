<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/list_row_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/construction_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/construction_status"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/construction_status"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/textViewFactionLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="start"
                android:paddingTop="8dp"
                android:text="@string/FC_GRINEER"
                android:textAlignment="textStart" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewPercentFomorian"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="%"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressBarFomorian"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:progressTint="@color/FC_GRINEER" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewFomorian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fomorian"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewPercentRazorback"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="%"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressBarRazorback"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:progressTint="@color/FC_CORPUS" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewRazorback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/razorback"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewFactionRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="end"
                android:paddingTop="8dp"
                android:text="@string/FC_CORPUS"
                android:textAlignment="textEnd" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>